<form class="{{cssClass}}"
      autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img"
             src="{{item.img}}"
             data-edit="img"
             title="{{item.name}}" />
        <div class="header-fields">
            {{#if editable}}
                <div class="resources grid grid-12col">
                    <div class="main grid-span-11">
                        <h1 class="charname"><input name="name"
                                   type="text"
                                   value="{{item.name}}"
                                   placeholder="Name" /></h1>
                    </div>
                    <div class="main grid-span-1">
                        <a class="edit-button"
                           title="Edit Skill"><i class="fas fa-edit"></i></a>
                    </div>
                </div>
            {{else}}
                <input name="name"
                       type="text"
                       value="{{item.name}}"
                       placeholder="Name" />
            {{/if}}
        </div>
    </header>
    <div class="sheet-body">
        <div>
            <h2>Attribute Bonuses</h2>
            <table>
                <tr>
                    <th>Attribute Name</th>
                    <th>Attribute Bonus</th>
                </tr>
                {{#each system.attributeBonuses as |data name|}}
                    <tr>
                        <td>{{system.label}}</td>
                        <td><input type="text"
                                   name="system.attributeBonuses.{{name}}"
                                   value="{{system.value}}"
                                   data-dtype="Number" /></td>
                    </tr>
                {{/each}}
            </table>
        </div>
        <div>
            <h2>Derived Attribute Bonuses</h2>
            <table>
                <tr>
                    <th>Derived Attribute Name</th>
                    <th>Derived Attribute Bonus</th>
                </tr>
                {{#each system.derivedAttributeBonuses as |data name|}}
                    <tr>
                        <td>{{system.label}}</td>
                        <td><input type="text"
                                   name="system.derivedAttributeBonuses.{{name}}"
                                   value="{{system.value}}"
                                   data-dtype="Number" /></td>
                    </tr>
                {{/each}}
            </table>
        </div>
        <div>
            <h2>Skill Bonuses</h2>
            <table>
                <tr>
                    <th>SKill Name</th>
                    <th>Skill Bonus</th>
                    <th></th>
                </tr>
                {{#each system.skillBonuses as |bonus name|}}
                    <tr>
                        <td>{{name}}</td>
                        <td><input name="system.skillBonuses.{{name}}"
                                   type="text"
                                   value="{{bonus}}"
                                   data-dtype="Number" /></td>
                        <td><a class="delete-skill-bonus"
                               title="Delete Skill Bonus"
                               data-skill-name="{{name}}"><i class="fas fa-trash"></i></a></td>
                    </tr>
                {{/each}}
                <tr>
                    <td><input type="text"
                               data-dtype="String" /></td>
                    <td></td>
                    <td><a class="add-skill-bonus"
                           title="Add Skill Bonus"><i class="fas fa-plus"></i></a></td>
                </tr>
            </table>
        </div>
        <div class="tab">
            {{editor content=system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
        </div>
    </div>
</form>
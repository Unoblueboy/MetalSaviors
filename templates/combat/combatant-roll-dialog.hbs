<div class="dialog-content">
    <form>
        <div class="form-group">
            <label>Bonus</label>
            <input type="number" name="bonus" value="0" step="1" />
        </div>
        <div class="form-group">
            <label>In CAV</label>
            <input type="checkbox" name="inCav" />
        </div>
    </form>
</div>
<div class="dialog-buttons">
    <button class="dialog-button {{cssClass}}" data-button="cancel">
        Cancel
    </button>
    <button class="dialog-button {{cssClass}}" data-button="normal">
        Roll Initiative
    </button>
</div>
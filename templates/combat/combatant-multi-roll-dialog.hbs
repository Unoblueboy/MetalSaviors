<div class="dialog-content">
    <form>
        <table>
            <tr>
                <th>Name</th>
                <th>Bonus</th>
                <th>In Cav</th>
                <th>Combat Speed</th>
                <th>Base Initative Modifiers</th>
            </tr>
            {{#each combatants as |combatant|}}
                <tr>
                    <td>{{combatant.name}}</td>
                    <td><input type="number"
                               name="{{combatant.id}}_bonus"
                               value="0"
                               step="1" /></td>
                    <td><input type="checkbox"
                               name="{{combatant.id}}_inCav"
                               class="in-cav-checkbox" /></td>
                    <td class="combat-speed-td">
                        <select type="checkbox"
                                name="{{combatant.id}}_combatSpeed"
                                style="visibility:hidden;">
                            {{selectOptions combatant.combatSpeedOptions}}
                        </select>
                    </td>
                    {{#if includeModifiers}}
                        <td class="base-initative-modifiers-td">
                            <input type="number"
                                   value="{{cavInitativeModifier}}"
                                   disabled="true"
                                   style="display:none;"
                                   class="cav-initative-modifier" />
                            <input type="number"
                                   value="{{pilotInitativeModifier}}"
                                   disabled="true"
                                   style="display:flex;"
                                   class="pilot-initative-modifier" />
                        </td>
                    {{else}}
                        <td></td>
                    {{/if}}
                </tr>
            {{/each}}
        </table>
    </form>
</div>
<div class="dialog-buttons">
    <button class="dialog-button {{cssClass}}"
            data-button="cancel">
        Cancel
    </button>
    <button class="dialog-button {{cssClass}}"
            data-button="normal">
        Roll Initiatives
    </button>
</div>
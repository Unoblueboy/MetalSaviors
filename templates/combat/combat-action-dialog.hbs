<div class="dialog-content">
    <form>
        <div class="form-group">
            <label>Action Name</label>
            <select class="action-name-select"
                    name="actionName">
                {{selectOptions actions selected=actionDetails.selectedAction nameAttr="name" labelAttr="name"}}
            </select>
        </div>
        {{#if (eq actionDetails.selectedAction "Accelerate / Brake")}}
            <div class="form-group">
                <label>Current Movement Speed</label>
                <input type="text"
                       value="{{actionDetails.speedDetails.currentSpeed.label}}"
                       disabled="true" />
            </div>
            <div class="form-group">
                <label>New Movement Speed</label>
                <select name="dSpeed">
                    {{#if actionDetails.speedDetails.accelerateSpeed.value}}
                        <option value="1">{{actionDetails.speedDetails.accelerateSpeed.label}}
                        </option>
                    {{/if}}
                    {{#if (or actionDetails.speedDetails.decelerateSpeed.value
                    (eq actionDetails.speedDetails.decelerateSpeed.value 0))}}
                        <option value="-1">{{actionDetails.speedDetails.decelerateSpeed.label}}
                        </option>
                    {{/if}}
                </select>
            </div>
            <div class="form-group">
                <label>Action Cost</label>
                <input type="text"
                       name="actionCost"
                       value="1"
                       disabled="true" />
            </div>
        {{/if}}
        {{#if (eq actionDetails.selectedAction "Attack")}}
            <!-- TODO: Attack Augments-->
            <div class="form-group">
                <label>Base Action Cost</label>
                <input type="text"
                       value="1"
                       disabled="true" />
            </div>
            <div class="form-group">
                <label>Augment</label>
                <select class="attack-augment-select"
                        name="attackAugmentName">
                    {{selectOptions attackAugments selected=attackAugmentsDetails.selectedAttackAugment nameAttr="name" labelAttr="name"}}
                </select>
            </div>
            <div class="form-group">
                {{#if (eq attackAugmentsDetails.selectedAttackAugment "Unspecified")}}
                    <label>Additional Augment Cost</label>
                    <input type="text"
                           name="augmentActionCost"
                           value="1" />
                {{else if (eq attackAugmentsDetails.selectedAttackAugment "None")}}
                    <input type="hidden"
                           name="augmentActionCost"
                           value="0" />
                {{else}}
                    <label>Additional Augment Cost</label>
                    <input type="text"
                           name="augmentActionCost"
                           value="{{attackAugmentsDetails.selectedAttackAugmentCost}}"
                           disabled="true" />
                {{/if}}
            </div>
        {{/if}}

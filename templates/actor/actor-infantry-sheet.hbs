<form class="{{cssClass}} {{actor.type}} flexcol"
      autocomplete="off">
    <div class="sidebar">
        <div>
            <img class="profile-img"
                 src="{{actor.img}}"
                 data-edit="img"
                 title="{{actor.name}}" />
        </div>
        <div class="flexcol">
            <div>Health Per Squad Member</div>
            <div class="flex-1">
                <div><input class="flex-1"
                           type="number"
                           name="data.healthPerSquadMember"
                           value="{{data.healthPerSquadMember}}"
                           data-dtype="Number" /></div>
            </div>
        </div>
        <div class="flexcol">
            <div>Are Civilians</div>
            <div class="flex-1">
                <div><input class="flex-1"
                           type="checkbox"
                           name="data.isCivilian"
                           {{#checked data.isCivilian}}{{/checked}} /></div>
            </div>
        </div>
    </div>
    <div class="main-body">
        <header>
            <div class="main-body-group">
                <div class="flexcol flex-2">
                    <div>Infantry Name</div>
                    <div><input name="name"
                               type="text"
                               value="{{actor.name}}"
                               placeholder="Name" /></div>
                </div>
            </div>
        </header>
        <div class="sheet-body">
            <div class="sheet-body-header">
                <div class="sheet-body-group">
                    <div class="flexcol flex-1">
                        <div>Health</div>
                        <div class="flexrow">
                            <div><input class="flex-1"
                                       type="number"
                                       name="data.health.value"
                                       value="{{data.health.value}}"
                                       data-dtype="Number" /></div>
                            <div class="flex-0">/</div>
                            <div><input class="flex-1"
                                       type="number"
                                       name="data.health.max"
                                       value="{{data.health.max}}"
                                       data-dtype="Number" /></div>
                        </div>
                    </div>
                    <div class="flexcol flex-1">
                        <div>Squad Members</div>
                        <div class="flex-1">
                            <div><input class="flex-1"
                                       type="number"
                                       value="{{data.squadMembers}}"
                                       data-dtype="Number"
                                       disabled="true" /></div>
                        </div>
                    </div>
                    <div class="flexcol flex-1">
                        <div>Spaces Per Turn</div>
                        <div class="flex-1">
                            <div><input class="flex-1"
                                       type="number"
                                       name="data.spacesMoved.value"
                                       value="{{data.spacesMoved.value}}"
                                       data-dtype="Number" /></div>
                        </div>
                    </div>
                    <div class="flexcol flex-1">
                        <!-- TODO: Make this rollable -->
                        <div>Combat Rating</div>
                        <div class="flex-1">
                            <div><input class="flex-1"
                                       type="number"
                                       name="data.cr"
                                       value="{{data.cr}}"
                                       data-dtype="Number" />
                            </div>
                        </div>
                    </div>
                    <div class="flexcol flex-1">
                        <div>Actions/Round</div>
                        {{#if combatTraining}}
                            <div><input type="text"
                                       value="{{combatTraining.data.actionsPerRound}}"
                                       data-dtype="Number"
                                       disabled="true"> </div>
                        {{else}}
                            <div><input type="text"
                                       value="No Training"
                                       data-dtype="Number"
                                       disabled="true"> </div>
                        {{/if}}
                    </div>
                </div>
                <div class="sheet-body-group">
                    <div class="squad-type-grid-container fill-parent">
                        <div class="squad-type">Squad Type</div>
                        <div class="squad-type-select">
                            <select class="fill-parent"
                                    name="data.squadType">
                                {{selectOptions squadTypes selected=data.squadType nameAttr="name" labelAttr="name"}}
                            </select>
                        </div>
                        <div class="squad-description">
                            {{#each squadTypes as |squadType index|}}
                                {{#if (eq squadType.name ../data.squadType)}}
                                    <div class="fill-parent">{{squadType.description}}</div>
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="fill-parent">
                <h3>Notes</h3>
                {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
            </div>
        </div>
    </div>
</form>
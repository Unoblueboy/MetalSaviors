<div class="skills-header">
    <h3>Skills</h3>
</div>
<div class="skills">
    {{#if (or (gt (len skills.atbSkills) 0) (gt (len skills.learnedSkills) 0))}}
        <table class="skills-table">
            {{#each skills.learnedSkills as |skill id|}}
                <tr class="learned-skill item-controls-container item" data-item-id="{{skill._id}}">
                    <td class="div-cell-wrapper">
                        <div>{{skill.name}}</div>
                        &nbsp;
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-roll rollable" data-roll-type="item"><i class="fas fa-dice"></i></a>
                                <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                    <td>{{skill.data.value}}</td>
                </tr>
            {{/each}}
            {{#if
				(and
					(gt (len skills.atbSkills) 0)
					(gt (len skills.learnedSkills) 0)
				)
			}}
                <tr class="table-break">
                    <td colspan="2"></td>
                </tr>
            {{/if}}
            {{#each skills.atbSkills as |skill id|}}
                <tr class="atb-skill item-controls-container item" data-item-id="{{skill._id}}">
                    <td class="div-cell-wrapper">
                        <div>{{skill.name}}</div>
                        &nbsp;
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                    <td></td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        <div>No skills have been added to this character yet</div>
    {{/if}}
</div>
<div class="weap-prof-header">
    <h3>Weapon Proficiencies</h3>
</div>
<div class="weap-profs">
    {{#if (gt (len skills.weaponProficiencies) 0)}}
        <table class="weap-profs-table">
            {{#each skills.weaponProficiencies as |skill id|}}
                <tr class="weapon-proficiency item-controls-container item" data-item-id="{{skill._id}}">
                    <td class="div-cell-wrapper">
                        <div>{{skill.name}}</div>
                        &nbsp;
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        <div>No skills or weapon proficiencies have been added to this character
            yet</div>
    {{/if}}
</div>
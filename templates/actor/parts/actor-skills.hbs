{{#if (ne characterType "character")}}
    <div class="concept-header">
        <h3 class="item-controls-container div-cell-wrapper">Concept
            {{#if editable}}
                &nbsp;
                <div class="item-controls"><a class="item-control item-create"
                       title="Create item"
                       data-type="concept"><i class="fas fa-plus"></i></a></div>
            {{/if}}
        </h3>
    </div>
    <div class="concept">
        {{#if (gt (len concepts) 0)}}
            <table class="skills-table">
                <colgroup>
                    <col style="width:90%">
                    <col style="width:10%">
                </colgroup>
                {{#each concepts as |concept id|}}
                    <tr class="item-controls-container item"
                        data-item-id="{{concept._id}}">
                        <td class="div-cell-wrapper">
                            <div class="name">{{concept.name}}</div>
                            <div class="item-controls">
                                {{#if ../editable}}
                                    <a class="item-roll rollable"
                                       data-roll-type="item"><i class="fas fa-dice"></i></a>
                                    <a class="item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                {{/if}}
                            </div>
                        </td>
                        <td>{{concept.system.value}}</td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            No concepts have been added to this character yet
        {{/if}}
    </div>
{{/if}}
{{#if (ne characterType "minorCharacter")}}
    <div class="skills-header">
        <h3>Skills</h3>
    </div>
    <div class="skills">
        {{#if (or (gt (len skills.atbSkills) 0) (gt (len skills.learnedSkills) 0))}}
            <table class="skills-table">
                <colgroup>
                    <col style="width:90%">
                    <col style="width:10%">
                </colgroup>
                {{#each skills.learnedSkills as |skill id|}}
                    <tr class="learned-skill item-controls-container item"
                        data-item-id="{{skill._id}}">
                        <td class="div-cell-wrapper">
                            <div class="name">{{skill.name}}</div>
                            <div class="item-controls">
                                {{#if ../editable}}
                                    <a class="item-roll rollable"
                                       data-roll-type="item"><i class="fas fa-dice"></i></a>
                                    <a class="item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                {{/if}}
                            </div>
                        </td>
                        <td>{{skill.system.value}}</td>
                    </tr>
                {{/each}}
                {{#if
				(and
					(gt (len skills.atbSkills) 0)
					(gt (len skills.learnedSkills) 0)
				)
			}}
                    <tr class="table-break">
                        <td colspan="2"></td>
                    </tr>
                {{/if}}
                {{#each skills.atbSkills as |skill id|}}
                    <tr class="atb-skill item-controls-container item"
                        data-item-id="{{skill._id}}">
                        <td class="div-cell-wrapper">
                            <div class="name">{{skill.name}}</div>
                            <div class="item-controls">
                                {{#if ../editable}}
                                    <a class="item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                {{/if}}
                            </div>
                        </td>
                        <td></td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <div>No skills have been added to this character yet</div>
        {{/if}}
    </div>
{{/if}}
<div class="weap-prof-header">
    <h3>Weapon Proficiencies</h3>
</div>
<div class="weap-profs">
    {{#if (gt (len skills.weaponProficiencies) 0)}}
        <table class="weap-profs-table">
            {{#each skills.weaponProficiencies as |skill id|}}
                <tr class="weapon-proficiency item-controls-container item"
                    data-item-id="{{skill._id}}">
                    <td class="div-cell-wrapper">
                        <div class="name">{{skill.name}}</div>
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-edit"
                                   title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-delete"
                                   title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        <div>No skills or weapon proficiencies have been added to this character
            yet</div>
    {{/if}}
</div>
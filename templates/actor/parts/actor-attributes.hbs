{{#each data.attributes as |attribute key|}}
	<div class="atb">
		<div>{{attribute.label}}</div>
		<div class="exit-submit">
			<div class="atb-value" data-atb-key="{{key}}"><input
					type="text"
					name="data.attributes.{{key}}.value"
					value="{{attribute.value}}"
					data-dtype="Number"
					disabled="true"
				/></div>
			<div class="atb-popup">
				<div class="flexcol">
					<div>Base Value</div>
					<div><input
							type="text"
							name="data.attributes.{{key}}.baseValue"
							value="{{attribute.baseValue}}"
							data-dtype="Number"
						/></div>
				</div>
				<div class="flexcol">
					<div>Other Bonuses</div>
					<div><input
							name="data.attributes.{{key}}.otherBonuses"
							type="text"
							value="{{attribute.otherBonuses}}"
							data-dtype="Number"
						/></div>
				</div>
			</div>
		</div>
	</div>
{{/each}}
<div class="sheet-body-header">
    <div class="sheet-body-group">
        <div class="flexcol">
            <div>Endurance</div>
            <div class="flexrow">
                <div><input class="update-actor"
                           type="text"
                           name="system.endurance.value"
                           value="{{system.endurance.value}}"
                           data-dtype="Number" /></div>
                <div class="flex-0">/</div>
                <div><input class="update-actor"
                           type="text"
                           name="system.endurance.max"
                           value="{{system.endurance.max}}"
                           data-dtype="Number" /></div>
            </div>
        </div>
        <div class="flexcol">
            <div>Health</div>
            <div class="flexrow">
                <div><input class="update-actor"
                           type="text"
                           name="system.health.value"
                           value="{{system.health.value}}"
                           data-dtype="Number" /></div>
                <div class="flex-0">/</div>
                <div><input class="update-actor"
                           type="text"
                           name="system.health.max"
                           value="{{system.health.max}}"
                           data-dtype="Number" /></div>
            </div>
        </div>
        <div class="flexcol nsr">
            <div>NSR</div>
            <div class="exit-submit">
                <div><input type="text"
                           value="{{system.nsr.value}}"
                           data-dtype="Number"
                           disabled="true" /></div>
                <div class="base-bonus-popup">
                    <div class="flexcol">
                        <div>Base Value</div>
                        <div><input type="text"
                                   title="Base Value"
                                   name="system.nsr.baseValue"
                                   value="{{system.nsr.baseValue}}"
                                   data-dtype="Number" /></div>
                    </div>
                    <div class="flexcol">
                        <div>Other Bonuses</div>
                        <div><input type="text"
                                   title="Other Bonuses"
                                   name="system.nsr.otherBonuses"
                                   value="{{system.nsr.otherBonuses}}"
                                   data-dtype="Number" /></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flexcol">
            <div>Actions/Round</div>
            {{#if combatTraining}}
                <div><input type="text"
                           value="{{combatTraining.system.actionsPerRound}}"
                           data-dtype="Number"
                           disabled="true"> </div>
            {{else}}
                <div><input type="text"
                           value="No Training"
                           data-dtype="Number"
                           disabled="true"> </div>
            {{/if}}
        </div>
    </div>
    {{#if (ne characterType "minorCharacter")}}
        <div class="sheet-body-group derived-atbs">
            {{#each system.derivedAttributes as |dAttribute name|}}
                <div class="flexcol flex-1">
                    <div class="flex-1">{{dAttribute.label}}</div>
                    <div class="exit-submit flex-0">
                        {{#if (eq name "damageModifier")}}
                            <div><input type="text"
                                       value="{{dAttribute.value}}"
                                       data-dtype="Dice"
                                       disabled="true" />
                            </div>
                            <div class="base-bonus-popup">
                                <div class="flexcol">
                                    <div>Other Bonuses</div>
                                    <div><input type="text"
                                               title="Other Bonuses"
                                               name="system.derivedAttributes.{{name}}.otherBonuses"
                                               value="{{dAttribute.otherBonuses}}"
                                               data-dtype="Dice" /></div>
                                </div>
                            </div>
                        {{else}}
                            <div><input type="text"
                                       value="{{dAttribute.value}}"
                                       data-dtype="Number"
                                       disabled="true" />
                            </div>
                            <div class="base-bonus-popup">
                                <div class="flexcol">
                                    <div>Other Bonuses</div>
                                    <div><input type="text"
                                               title="Other Bonuses"
                                               name="system.derivedAttributes.{{name}}.otherBonuses"
                                               value="{{dAttribute.otherBonuses}}"
                                               data-dtype="Number" /></div>
                                </div>
                            </div>
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
<div class="flexrow">
    <div class="column1 flex-3">
        {{> "systems/metalsaviors/templates/actor/parts/actor-items.hbs"}}
    </div>
    <div class="column2 flex-2">
        {{> "systems/metalsaviors/templates/actor/parts/actor-skills.hbs"}}
    </div>
</div>
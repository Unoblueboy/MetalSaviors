<div class="pilot-header">
    <h3>Pilot Licenses</h3>
</div>
<div class="pilot-licenses">
    {{#if (gt (len pilotLicenses) 0)}}
        <table class="licenses-table">
            {{#each pilotLicenses as |item id|}}
                <tr class="pilot-license item-controls-container item"
                    data-item-id="{{item._id}}">
                    <td class="div-cell-wrapper">
                        <div class="name">{{item.name}}</div>
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-edit"
                                   title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete"
                                   title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        <div>No pilot licenses have been added to this character yet</div>
    {{/if}}
</div>
<div class="weapons-header">
    <h3>Weapons</h3>
</div>
<div class="weapons">
    {{#if (gt (len weapons) 0)}}
        <table class="weapons-table">
            <colgroup>
                <col style="width:60%">
                <col style="width:20%">
                <col style="width:20%">
            </colgroup>
            <thead>
                <tr class="item items-header">
                    <th class="item-name">Name</th>
                    <th class="item-formula">Damage Roll</th>
                    <th class="item-formula">To Hit Bonus</th>
                </tr>
            </thead>
            <tbody>
                {{#each weapons as |weapon id|}}
                    <tr class="item item-controls-container"
                        data-item-id="{{weapon._id}}">
                        <td class="item-name div-cell-wrapper">
                            <div class="name">{{weapon.name}}</div>
                            <div class="item-controls">
                                {{#if ../editable}}
                                    <a class="item-roll rollable"
                                       data-roll-type="item"><i class="fas fa-dice"></i></a>
                                    <a class="item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                {{/if}}
                            </div>
                        </td>
                        <td class="item-prop">{{weapon.data.rolls.Normal.damageRoll}}</td>
                        <td class="item-prop">{{weapon.data.rolls.Normal.toHitBonus}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No Weapons have been added to this character yet</div>
    {{/if}}
</div>
<div class="items-header">
    <h3>Items</h3>
</div>
<div class="items">
    {{#if (gt (len gear) 0)}}
        <table class="items-table">
            <colgroup>
                <col style="width:60%">
                <col style="width:40%">
            </colgroup>
            <thead>
                <tr class="item items-header">
                    <th class="item-name">Name</th>
                    <th class="item-formula">Roll Formula</th>
                </tr>
            </thead>
            <tbody>
                {{#each gear as |item id|}}
                    <tr class="item item-controls-container"
                        data-item-id="{{item._id}}">
                        <td class="item-name div-cell-wrapper">
                            <div class="item-image">
                                <a class="rollable"
                                   data-roll-type="item"><img src="{{item.img}}"
                                         title="{{item.name}}"
                                         width="24"
                                         height="24" /></a>
                            </div>
                            &nbsp;
                            <div class="name">
                                <h4>{{item.name}}</h4>
                            </div>
                            {{#if ../editable}}
                                <div class="item-controls">
                                    <a class="item-control item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                </div>
                            {{/if}}
                        </td>
                        <td class="item-formula item-prop">{{item.data.formula}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No items have been added to this character yet</div>
    {{/if}}
</div>
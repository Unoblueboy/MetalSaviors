<div class="pilot-header">
    <h3>Pilot Licenses</h3>
</div>
<div class="pilot-licenses">
    {{#if (gt (len pilotLicenses) 0)}}
        <table class="licenses-table">
            {{#each pilotLicenses as |item id|}}
                <tr class="pilot-license item-controls-container item"
                    data-item-id="{{item._id}}">
                    <td class="div-cell-wrapper">
                        <div class="name">{{item.name}}</div>
                        <div class="item-controls">
                            {{#if ../editable}}
                                <a class="item-edit"
                                   title="Edit Item"><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete"
                                   title="Delete Item"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        <div>No pilot licenses have been added to this character yet</div>
    {{/if}}
</div>
<div class="cavs-header">
    <h3>Cavs</h3>
</div>
<div class="cavs">
    {{#if (gt (len cavs) 0)}}
        <table class="cav-table">
            <colgroup>
                <col style="width:60%">
                <col style="width:40%">
            </colgroup>
            <thead>
                <tr class="item items-header">
                    <th class="cav-name">Name</th>
                    <th class="cav-model">Model</th>
                </tr>
            </thead>
            <tbody>
                {{#each cavs as |cav ind|}}
                    <tr class="cav"
                        data-cav-id="{{cav.id}}">
                        <td class="cav-name">
                            <a class="cav-show">{{cav.name}}</a>
                        </td>
                        <td class="cav-model item-prop">{{cav.model}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No Cavs have been added to this character yet</div>
    {{/if}}
</div>
{{> "systems/metalsaviors/templates/actor/parts/actor-weapons.hbs" }}
<div class="items-header">
    <h3>Items</h3>
</div>
<div class="items">
    {{#if (gt (len gear) 0)}}
        <table class="items-table">
            <colgroup>
                <col style="width:60%">
                <col style="width:40%">
            </colgroup>
            <thead>
                <tr class="item items-header">
                    <th class="item-name">Name</th>
                    <th class="item-formula">Roll Formula</th>
                </tr>
            </thead>
            <tbody>
                {{#each gear as |item id|}}
                    <tr class="item item-controls-container"
                        data-item-id="{{item._id}}">
                        <td class="item-name div-cell-wrapper">
                            <div class="item-image">
                                <a class="rollable"
                                   data-roll-type="item"><img src="{{item.img}}"
                                         title="{{item.name}}"
                                         width="24"
                                         height="24" /></a>
                            </div>
                            &nbsp;
                            <div class="name">
                                <h4>{{item.name}}</h4>
                            </div>
                            {{#if ../editable}}
                                <div class="item-controls">
                                    <a class="item-control item-edit"
                                       title="Edit Item"><i class="fas fa-edit"></i></a>
                                    <a class="item-control item-delete"
                                       title="Delete Item"><i class="fas fa-trash"></i></a>
                                </div>
                            {{/if}}
                        </td>
                        <td class="item-formula item-prop">{{item.system.formula}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No items have been added to this character yet</div>
    {{/if}}
</div>